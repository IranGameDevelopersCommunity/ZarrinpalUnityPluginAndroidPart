<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/purchase_result_textView"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/purchase_failed"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="37dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/button_return"
        app:layout_constraintEnd_toEndOf="@+id/purchase_result_textView"
        app:layout_constraintStart_toStartOf="@+id/purchase_result_textView"
        app:layout_constraintTop_toBottomOf="@+id/purchase_result_textView" />
</android.support.constraint.ConstraintLayout>